<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_row_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_icon"
        android:padding="@dimen/list_icon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/drawer_row_image_margin"
        android:layout_marginRight="@dimen/drawer_row_image_margin"
        android:clickable="true"
        android:src="@drawable/ic_next"/>
    <TextView
        android:id="@+id/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/drawer_row_text_marginleft"
        android:text="Dummy text"/>

</RelativeLayout>