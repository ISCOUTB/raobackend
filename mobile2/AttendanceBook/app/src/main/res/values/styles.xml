<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>
    
    <style name="AttendanceBookToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="MainNameTitle" parent="AppTheme.Base">
        <item name="android:textColor">@color/primaryColor50</item> <!-- Roboto Light -->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ProfileTeacherSummary" parent="AppTheme.Base">
        <item name="android:textColor">@color/primaryColor50</item> <!-- Roboto Condensed -->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProfileTeacherInfo" parent="AppTheme.Base">
        <item name="android:textColor">@color/primaryColor100</item> <!-- Roboto Condensed -->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProfileTeacherInfoLabels" parent="AppTheme.Base">
        <item name="android:textColor">@color/primaryColor200</item> <!-- Roboto Condensed -->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
